<Window x:Class="Exam_wpf_MP3Plaer_Core_.Scan_Dir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam_wpf_MP3Plaer_Core_"
        mc:Ignorable="d"
         WindowStyle="ToolWindow"
         Height="153" Width="800" Background="Black">
    <Grid Style="{ DynamicResource MyStyle}" Loaded="Grid_Loaded">
        <StackPanel Orientation="Horizontal">
            <Label Style="{DynamicResource MyStyleLabel}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="44">
                Путь папки
            </Label>
            <TextBox x:Name="nameFolder" Height="56" Width="500" HorizontalContentAlignment ="Center" VerticalContentAlignment="Center" FontSize="20" Background="White" />
            <ScrollViewer x:Name="scrollField"  HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <Button Style="{DynamicResource MyStyleButton}" Width="75" HorizontalContentAlignment="Right"  Height="56" FontSize="39" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown"  >OK</Button>
            </ScrollViewer>
        </StackPanel>

    </Grid>

</Window>
